<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_white"
    tools:context=".OrderDetailsActivity">

    <include
        android:id="@+id/order_details_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_details_toolbar"
        android:background="@color/blue_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_details_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:layout_marginTop="20sp"
                android:text="@string/order_placed"
                android:textAppearance="@style/TextViewFontRegular"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:layout_marginTop="20sp"
                android:text="Your Order"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4sp"
                app:cardCornerRadius="6sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp">

                    <TextView
                        android:id="@+id/order_details_fish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:text="Fish Name"
                        android:textColor="@color/color_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/order_details_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/custom_field"
                        android:fontFamily="@font/ubuntu"
                        android:padding="6sp"
                        android:text="Order Status"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/order_details_view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/order_details_fish_name"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />

                    <TextView
                        android:id="@+id/order_details_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_view1"
                        android:layout_marginVertical="5sp"
                        android:text="Price:"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textColor="@color/color_black" />

                    <TextView
                        android:id="@+id/order_details_qty_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_price_tv"
                        android:layout_marginVertical="5sp"
                        android:text="Quantity:"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textColor="@color/color_black" />

                    <TextView
                        android:id="@+id/order_details_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_qty_tv"
                        android:layout_marginVertical="5sp"
                        android:text="Order Total:"
                        android:textAppearance="@style/TextViewFontBold"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_details_order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_view1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="5sp"
                        android:text="₹200.00"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/order_details_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_order_price"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="5sp"
                        android:text="2Kg"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/order_details_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_qty"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="5sp"
                        android:text="₹400"
                        android:textAppearance="@style/TextViewFontBold"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:layout_marginTop="20sp"
                android:text="Delivery Address:"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/order_details_address_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4sp"
                app:cardCornerRadius="6sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:text="Consumer Name"
                        android:textColor="@color/color_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/order_details_building"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_name"
                        android:layout_marginTop="5sp"
                        android:text="Address Building"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/order_details_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_building"
                        android:text="Address Area"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/order_details_landmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_area"
                        android:text="Address Landmark"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/order_details_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_landmark"
                        android:text="Address City"
                        android:textAppearance="@style/TextViewFontRegular" />


                    <TextView
                        android:id="@+id/order_details_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_landmark"
                        android:layout_marginStart="7sp"
                        android:layout_toEndOf="@id/order_details_city"
                        android:text="Address Pin"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/order_details_kerala"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_pin"
                        android:text="Kerala,"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/order_details_india"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_details_pin"
                        android:layout_marginStart="7sp"
                        android:layout_toEndOf="@id/order_details_kerala"
                        android:text="India"
                        android:textAppearance="@style/TextViewFontRegular" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:layout_marginTop="20sp"
                android:text="Order Details"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4sp"
                app:cardCornerRadius="6sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order ID"
                        android:textColor="@color/color_black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/order_details_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDKtXjGdF6bsob5Gj0ea"
                        android:textColor="@color/color_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Date"
                        android:textColor="@color/color_black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/order_details_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="September 17, 2020 at 5:34:34 pm"
                        android:textColor="@color/color_black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/order_details_deliver_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_green"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:paddingVertical="10sp"
            android:text="Delivered? Click here"
            android:textColor="@color/color_White"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_details_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_red"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:paddingVertical="15sp"
            android:text="Cancel Order"
            android:textColor="@color/color_White"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>