<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    tools:context=".AuthenticationBridgeActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/auth_card"
        android:src="@mipmap/logo" />


    <androidx.cardview.widget.CardView
        android:id="@+id/auth_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="20sp"
        app:cardCornerRadius="20sp"
        app:cardElevation="3sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:text="ACCOUNT"
                android:textColor="@color/color_black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:paddingHorizontal="10sp"
                android:text="Sign In or Sign Up to continue."
                android:textColor="@color/color_black"
                android:textSize="16sp" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/auth_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="EXISTING USER? SIGN IN"
                android:textColor="@color/color_White"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimary"
                app:rippleColor="@color/color_White" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="OR"
                android:textColor="@color/color_black"
                android:textStyle="bold" />


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/auth_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35sp"
                android:layout_marginBottom="25sp"
                android:gravity="center"
                android:text="NEW USER? SIGN UP"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                app:backgroundTint="@color/color_White"
                app:rippleColor="@color/colorSecondary" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>


