<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    app:cardCornerRadius="6sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp">

        <TextView
            android:id="@+id/order_fish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Fish Name"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_fish_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10sp"
            android:background="@drawable/custom_field"
            android:fontFamily="@font/ubuntu"
            android:padding="6sp"
            android:text="Fish Availability/ Order Status"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <View
            android:id="@+id/order_view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/order_fish_name"
            android:layout_marginTop="5sp"
            android:background="@color/blue_white" />

        <TextView
            android:id="@+id/order_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_view1"
            android:layout_marginVertical="5sp"
            android:text="Price:"
            android:textAppearance="@style/TextViewFontRegular"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/order_qty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_price_tv"
            android:layout_marginVertical="5sp"
            android:text="Quantity:"
            android:textAppearance="@style/TextViewFontRegular"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/order_delivery_charge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_qty_tv"
            android:layout_marginVertical="5sp"
            android:text="Delivery Charge:"
            android:textAppearance="@style/TextViewFontRegular" />

        <TextView
            android:id="@+id/order_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_delivery_charge_tv"
            android:layout_marginVertical="5sp"
            android:text="Order Total:"
            android:textAppearance="@style/TextViewFontBold"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_fish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_view1"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5sp"
            android:text="₹200.00"
            android:textAppearance="@style/TextViewFontRegular" />

        <TextView
            android:id="@+id/order_fish_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_fish_price"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5sp"
            android:text="2Kg"
            android:textAppearance="@style/TextViewFontRegular" />

        <TextView
            android:id="@+id/order_delivery_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_fish_qty"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5sp"
            android:text="₹50.00"
            android:textAppearance="@style/TextViewFontRegular" />

        <TextView
            android:id="@+id/order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_delivery_charge"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5sp"
            android:text="₹400.00"
            android:textAppearance="@style/TextViewFontBold"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>