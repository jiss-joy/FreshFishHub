<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_white">

    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_white"
            android:padding="10sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_details_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                app:cardCornerRadius="6sp"
                app:cardElevation="3sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/details_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:text="Details"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/profile_edit_btn"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:background="@color/color_White"
                        android:src="@drawable/edit" />

                    <View
                        android:id="@+id/profile_view_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/details_tv1"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />

                    <TextView
                        android:id="@+id/details_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_view_1"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_view_1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Name"
                        android:textColor="@color/color_gray"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/profile_view_2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/details_tv2"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />


                    <TextView
                        android:id="@+id/details_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_view_2"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="15sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Phone"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/profile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_view_2"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginBottom="15sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Phone"
                        android:textColor="@color/color_gray"
                        android:textSize="16sp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/account_setting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_details_card"
                android:layout_margin="6sp"
                app:cardCornerRadius="6sp"
                app:cardElevation="3sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/account_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:text="Account"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />

                    <TextView
                        android:id="@+id/profile_address_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="My Adresses"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />


                    <TextView
                        android:id="@+id/profile_past_orders_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="15sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Past Orders"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/legal_about_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_setting_card"
                android:layout_margin="6sp"
                app:cardCornerRadius="6sp"
                app:cardElevation="3sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/legal_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:text="Support"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />


                    <TextView
                        android:id="@+id/profile_contact_us_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="15sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Contact Us"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/support_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/legal_about_card"
                android:layout_margin="6sp"
                app:cardCornerRadius="6sp"
                app:cardElevation="3sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/support_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:text="Legal"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />

                    <TextView
                        android:id="@+id/profile_tos_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Terms of Service"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />


                    <TextView
                        android:id="@+id/profile_privacy_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="15sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Privacy Policy"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_log_out_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/support_card"
                android:layout_margin="6sp"
                app:cardCornerRadius="6sp"
                app:cardElevation="3sp">

                <TextView
                    android:id="@+id/profile_log_out_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Log Out"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_log_out_card"
                android:layout_centerHorizontal="true"
                android:layout_margin="6sp"
                android:text="Developed by Smartech Brain Technologies"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_ad"
                android:layout_centerHorizontal="true"
                android:text="VERSION 1.0.0"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_version"
                android:layout_centerHorizontal="true"
                android:layout_margin="6sp"
                android:text="User ID: no0p2kyTf0SFC0qR3fVtK1uLg8w2"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>