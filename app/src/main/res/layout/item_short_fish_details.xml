<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    app:cardCornerRadius="8sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/short_fish_details_pic"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_centerVertical="true"
            android:layout_margin="8sp"
            android:src="@drawable/default_fish" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:layout_toEndOf="@id/short_fish_details_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/short_fish_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="FISH NAME"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/short_fish_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/ubuntu"
                android:text="FISH PRICE" />

            <TextView
                android:id="@+id/short_fish_details_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/ubuntu"
                android:text="FISH AVAILABILITY"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/short_fish_details_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/ubuntu"
                android:text="FISH LOCATION"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>