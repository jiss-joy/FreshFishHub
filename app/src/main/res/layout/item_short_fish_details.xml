<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    android:layout_weight="0.5"
    app:cardCornerRadius="6sp"
    app:cardElevation="2sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <com.jackandphantom.circularimageview.RoundedImage
            android:id="@+id/short_fish_details_pic"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_fish" />

        <TextView
            android:id="@+id/short_fish_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_fish_details_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/ubuntu"
            android:text="FISH NAME"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/short_fish_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_fish_details_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="8sp"
            android:fontFamily="@font/ubuntu"
            android:text="FISH PRICE"
            android:textColor="@color/color_black" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>