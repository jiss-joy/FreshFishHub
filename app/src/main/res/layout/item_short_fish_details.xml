<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    android:padding="3sp"
    app:cardCornerRadius="6sp"
    app:cardElevation="2sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jackandphantom.circularimageview.RoundedImage
            android:id="@+id/short_fish_details_pic"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_centerVertical="true"
            android:layout_margin="8sp"
            android:src="@drawable/default_fish" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:layout_toEndOf="@id/short_fish_details_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/short_fish_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/knewave"
                android:text="FISH NAME"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/short_fish_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/lato"
                android:text="FISH PRICE"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/short_fish_details_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/lato"
                android:text="FISH LOCATION"
                android:textColor="@color/color_black" />

        </LinearLayout>

        <TextView
            android:id="@+id/short_fish_details_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/custom_field"
            android:fontFamily="@font/ubuntu"
            android:padding="6sp"
            android:text="Fish Availability"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>