<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    app:cardCornerRadius="6sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/short_order_pic"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_centerVertical="true"
            android:layout_margin="8sp"
            android:src="@drawable/default_fish" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:layout_toEndOf="@id/short_order_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/short_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="FISH NAME"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/short_order_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:text="FISH QTY" />

            <TextView
                android:id="@+id/short_order_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:text="TOTAL PRICE" />

        </LinearLayout>

        <TextView
            android:id="@+id/short_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/custom_field"
            android:fontFamily="@font/ubuntu"
            android:padding="6sp"
            android:text="Order Status"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>