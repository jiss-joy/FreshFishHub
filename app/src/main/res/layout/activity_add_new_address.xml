<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewAddressActivity">


    <include
        android:id="@+id/add_new_address_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/add_new_address_layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/add_new_address_layout_3"
        android:layout_below="@id/add_new_address_toolbar"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_new_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="25sp"
                android:background="@drawable/custom_field_2"
                android:gravity="center"
                android:hint="Full Name"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_new_address_building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_field_2"
                android:ems="14"
                android:gravity="center"
                android:hint="Flat, House no., House Name"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_new_address_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_field_2"
                android:ems="14"
                android:gravity="center"
                android:hint="Area, Street, Village"
                android:isScrollContainer="true"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_new_address_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_field_2"
                android:ems="14"
                android:gravity="center"
                android:hint="Landmark"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_new_address_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_field_2"
                android:ems="14"
                android:gravity="center"
                android:hint="Town/City"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_new_address_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_field_2"
                android:ems="14"
                android:gravity="center"
                android:hint="PIN Code"
                android:inputType="number"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_new_address_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_field_2"
                android:ems="14"
                android:gravity="center"
                android:hint="Kerala"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_new_address_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_field_2"
                android:ems="14"
                android:gravity="center"
                android:hint="India"
                android:padding="10sp"
                android:textAppearance="@style/EditTextFont"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/add_new_address_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/add_new_address_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="@color/color_White"
            android:textStyle="bold"
            app:backgroundTint="@color/colorPrimary"
            app:rippleColor="@color/color_White" />
    </LinearLayout>

</RelativeLayout>