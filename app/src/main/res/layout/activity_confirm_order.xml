<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_white"
    tools:context=".ConfirmOrderActivity">

    <include
        android:id="@+id/confirm_order_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/buy_fish_layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/confirm_order_place_order_btn"
        android:layout_below="@id/confirm_order_toolbar"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="20sp"
                android:text="ORDER DETAILS"
                android:textAppearance="@style/TextViewFontRegular"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4sp"
                app:cardCornerRadius="6sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp">

                    <TextView
                        android:id="@+id/confirm_order_fish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Fish Name"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirm_order_fish_availability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/custom_field"
                        android:fontFamily="@font/ubuntu"
                        android:padding="6sp"
                        android:text="Fish Availability"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/confirm_order_view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/confirm_order_fish_name"
                        android:layout_marginTop="5sp"
                        android:background="@color/blue_white" />

                    <TextView
                        android:id="@+id/confirm_order_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_view1"
                        android:layout_marginVertical="5sp"
                        android:text="Price:"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textColor="@color/color_black" />

                    <TextView
                        android:id="@+id/confirm_order_qty_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_price_tv"
                        android:layout_marginVertical="5sp"
                        android:text="Quantity:"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textColor="@color/color_black" />

                    <TextView
                        android:id="@+id/confirm_order_total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_qty_tv"
                        android:layout_marginVertical="5sp"
                        android:text="Order Total:"
                        android:textAppearance="@style/TextViewFontBold"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirm_order_fish_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_view1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="5sp"
                        android:text="₹200.00"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/confirm_order_fish_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_fish_price"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="5sp"
                        android:text="2Kg"
                        android:textAppearance="@style/TextViewFontRegular" />

                    <TextView
                        android:id="@+id/confirm_order_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_fish_qty"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="5sp"
                        android:text="₹400"
                        android:textAppearance="@style/TextViewFontBold"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="20sp"
                android:text="DELIVERING TO:"
                android:textAppearance="@style/TextViewFontRegular"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/confirm_order_no_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/confirm_order_address_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4sp"
                app:cardCornerRadius="6sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/confirm_order_address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Consumer Name"
                        android:textColor="@color/color_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirm_order_address_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_toEndOf="@id/confirm_order_address_name"
                        android:background="@drawable/custom_field"
                        android:fontFamily="@font/ubuntu"
                        android:padding="6sp"
                        android:text="Address Status"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/confirm_order_address_building"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_address_name"
                        android:layout_marginTop="5sp"
                        android:text="Address Building"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/confirm_order_address_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_address_building"
                        android:text="Address Area"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/confirm_order_address_landmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_address_state"
                        android:text="Address Landmark"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/confirm_order_address_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_address_area"
                        android:text="Address City"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/confirm_order_address_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_address_area"
                        android:layout_marginStart="7sp"
                        android:layout_toEndOf="@id/confirm_order_address_city"
                        android:text="Address Pin"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/confirm_order_address_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_address_city"
                        android:text="Kerala,"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/confirm_order_address_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/confirm_order_address_city"
                        android:layout_marginStart="7sp"
                        android:layout_toEndOf="@id/confirm_order_address_state"
                        android:text="India"
                        android:textAppearance="@style/TextViewFontRegular"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/confirm_order_address_options_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/color_White"
                        android:src="@drawable/options" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:fontFamily="@font/ubuntu"
                android:text="By placing your order, you agree to Fresh Fish Hub's privacy policy and conditions of use." />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/confirm_order_place_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:paddingVertical="10sp"
            android:text="Place Order"
            android:textColor="@color/color_White"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>