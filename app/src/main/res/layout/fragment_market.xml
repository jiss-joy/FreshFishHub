<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/market_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_toolbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15sp"
            android:fontFamily="@font/ubuntu"
            android:text="Market"
            android:textColor="@color/color_White"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/market_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:drawableEnd="@drawable/search"
            android:paddingStart="25sp"
            android:text="Search Fishes..."
            android:textColor="@color/colorSecondary"
            app:backgroundTint="@color/color_White"
            app:drawableTint="@color/colorPrimary" />

    </LinearLayout>


    <ImageView
        android:id="@+id/market_no_fish_image"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_above="@id/market_no_fish_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp" />

    <TextView
        android:id="@+id/market_no_fish_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/market_toolbar"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <TextView
                android:id="@+id/best_deals_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="5sp"
                android:text="Best Deals!"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/best_deals_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/best_deals_tv"
                android:background="@drawable/best_deals_recycler"
                android:orientation="horizontal"
                android:padding="5sp" />

            <TextView
                android:id="@+id/today_arrival_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/best_deals_recycler"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15sp"
                android:text="Today's Arrival!"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/market_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@drawable/normal_recycler"
                android:padding="4sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>