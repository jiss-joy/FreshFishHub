<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    app:cardCornerRadius="6sp"
    app:cardElevation="2sp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jackandphantom.circularimageview.RoundedImage
            android:id="@+id/best_deal_pic"
            android:layout_width="130sp"
            android:layout_height="120sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_fish" />

        <TextView
            android:id="@+id/best_deal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/best_deal_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/lato"
            android:text="FISH NAME"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/best_deal_name"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/best_deal_new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="8sp"
                android:fontFamily="@font/lato"
                android:text="Rs.160/KG"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/best_deal_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="8sp"
                android:fontFamily="@font/lato"
                android:text="Rs.200/KG" />

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>